                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="|"
                    android:textColor="@color/darkredtxt"
                    android:textSize="20dp"
                    android:textStyle="bold" />

