<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Enquiry_form">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:background="@color/whitee"
        android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whitee"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbare"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:background="@color/blackie"
            android:scrollbars="none"
            app:layout_scrollFlags="scroll|enterAlways">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:src="@drawable/logo" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/signinAbout"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="70dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/whitiee"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center"
                android:orientation="horizontal"/>

        </androidx.appcompat.widget.Toolbar>

        <androidx.cardview.widget.CardView
            android:layout_width="339dp"
            android:layout_height="244dp"
            app:cardCornerRadius="20dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            app:cardBackgroundColor="@color/babypink"
            android:elevation="20dp"
            app:cardMaxElevation="100dp"
            android:outlineSpotShadowColor="@color/marun">

            <LinearLayout
                android:layout_width="335dp"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="30dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="30dp"
                    android:shadowColor="#781A1A"
                    android:text="Enquiry Form"
                    android:textColor="@color/darkredtxt"
                    android:textColorLink="#E91E63"
                    android:textSize="22sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="8dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="13dp"
                    android:paddingRight="20dp"
                    android:shadowColor="#000000"
                    android:text="Our Course Inquiry Form is designed for individuals like you who want to explore the opportunities that our courses and programs offer. Fill out the form below to get more information and take the first step toward a brighter future"
                    android:textColor="@color/darkredtxt"
                    android:textColorLink="#E91E63"
                    android:textSize="12sp"
                    android:textStyle="bold">

                </TextView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp">

                </Space>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey">

                </View>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="8dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="13dp"
                    android:paddingRight="20dp"
                    android:shadowColor="#000000"
                    android:text="* Indicates required question"
                    android:textColor="@color/marun"
                    android:textColorLink="#E91E63"
                    android:textSize="12sp"
                    android:textStyle="bold">

                </TextView>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="339dp"
            android:layout_height="124dp"
            app:cardCornerRadius="20dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/babypink"
            android:elevation="20dp"
            app:cardMaxElevation="100dp"
            android:outlineSpotShadowColor="@color/marun">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="30dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="20dp"
                        android:shadowColor="#781A1A"
                        android:text="Name"
                        android:textStyle="bold"
                        android:textColor="@color/darkredtxt"
                        android:textColorLink="#E91E63"
                        android:textSize="20sp">

                    </TextView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="30dp"
                        android:paddingTop="20dp"
                        android:shadowColor="#781A1A"
                        android:text="*"
                        android:textColor="@color/marun"
                        android:textColorLink="#E91E63"
                        android:textSize="20sp">

                    </TextView>


                </LinearLayout>


               <EditText
                   android:layout_width="300dp"
                   android:layout_height="50dp"
                   android:layout_gravity="center"
                   android:id="@+id/name"
                   android:text="Enter Your Name"
                   android:textColor="@color/greye"
                   android:paddingLeft="10dp">

               </EditText>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp">

                </Space>



            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp">

        </Space>


        <androidx.cardview.widget.CardView
            android:layout_width="339dp"
            android:layout_height="124dp"
            app:cardCornerRadius="20dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/babypink"
            android:elevation="20dp"
            app:cardMaxElevation="100dp"
            android:outlineSpotShadowColor="@color/marun">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="30dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="20dp"
                        android:shadowColor="#781A1A"
                        android:text="Address"
                        android:textColor="@color/darkredtxt"
                        android:textColorLink="#E91E63"
                        android:textStyle="bold"
                        android:textSize="20sp">

                    </TextView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="30dp"
                        android:paddingTop="20dp"
                        android:shadowColor="#781A1A"
                        android:text="*"
                        android:textColor="@color/marun"
                        android:textColorLink="#E91E63"
                        android:textSize="20sp">

                    </TextView>


                </LinearLayout>


                <EditText
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:id="@+id/address"
                    android:text="Enter Your Address"
                    android:textColor="@color/greye"
                    android:paddingLeft="10dp">

                </EditText>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp">

                </Space>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp">

        </Space>


        <androidx.cardview.widget.CardView
            android:layout_width="339dp"
            android:layout_height="124dp"
            app:cardCornerRadius="20dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/babypink"
            android:elevation="20dp"
            app:cardMaxElevation="100dp"
            android:outlineSpotShadowColor="@color/marun">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="30dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="20dp"
                        android:shadowColor="#781A1A"
                        android:text="Email"
                        android:textStyle="bold"
                        android:textColor="@color/darkredtxt"
                        android:textColorLink="#E91E63"
                        android:textSize="20sp">

                    </TextView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="30dp"
                        android:paddingTop="20dp"
                        android:shadowColor="#781A1A"
                        android:text="*"
                        android:textColor="@color/marun"
                        android:textColorLink="#E91E63"
                        android:textSize="20sp">

                    </TextView>


                </LinearLayout>


                <EditText
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:text="Enter your Email ID"
                    android:id="@+id/email"
                    android:textColor="@color/greye"
                    android:paddingLeft="10dp">

                </EditText>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp">

                </Space>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp">

        </Space>


        <androidx.cardview.widget.CardView
            android:layout_width="339dp"
            android:layout_height="124dp"
            app:cardCornerRadius="20dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/babypink"
            android:elevation="20dp"
            app:cardMaxElevation="100dp"
            android:outlineSpotShadowColor="@color/marun">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="132dp"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="30dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="20dp"
                        android:shadowColor="#781A1A"
                        android:text="Phone No."
                        android:textStyle="bold"
                        android:textColor="@color/darkredtxt"
                        android:textColorLink="#E91E63"
                        android:textSize="20sp">

                    </TextView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="30dp"
                        android:paddingTop="20dp"
                        android:shadowColor="#781A1A"
                        android:text="*"
                        android:textColor="@color/marun"
                        android:textColorLink="#E91E63"
                        android:textSize="20sp">

                    </TextView>


                </LinearLayout>


                <EditText
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:text="Enter your phone number"
                    android:id="@+id/phn_num"
                    android:textColor="@color/greye"
                    android:paddingLeft="10dp">

                </EditText>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp">

                </Space>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp">

        </Space>


        <androidx.cardview.widget.CardView
            android:layout_width="339dp"
            android:layout_height="124dp"
            app:cardCornerRadius="20dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/babypink"
            android:elevation="20dp"
            app:cardMaxElevation="100dp"
            android:outlineSpotShadowColor="@color/marun">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="30dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="20dp"
                        android:shadowColor="#781A1A"
                        android:text="Mode Of Course"
                        android:textStyle="bold"
                        android:textColor="@color/darkredtxt"
                        android:textColorLink="#E91E63"
                        android:textSize="20sp">

                    </TextView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="30dp"
                        android:paddingTop="20dp"
                        android:shadowColor="#781A1A"
                        android:text="*"
                        android:textColor="@color/marun"
                        android:textColorLink="#E91E63"
                        android:textSize="20sp">

                    </TextView>


                </LinearLayout>

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:id="@+id/mode"
                    android:textColor="@color/greye"
                    android:text="Enter the Mode Online/Offline"
                    android:paddingLeft="10dp">

                </EditText>


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp">

                </Space>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp">

        </Space>


        <androidx.cardview.widget.CardView
            android:layout_width="339dp"
            android:layout_height="124dp"
            app:cardCornerRadius="20dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/babypink"
            android:elevation="20dp"
            app:cardMaxElevation="100dp"
            android:outlineSpotShadowColor="@color/marun">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="30dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="20dp"
                        android:shadowColor="#781A1A"
                        android:textStyle="bold"
                        android:text="Course Name"
                        android:textColor="@color/darkredtxt"
                        android:textColorLink="#E91E63"
                        android:textSize="20sp">

                    </TextView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="30dp"
                        android:paddingTop="20dp"
                        android:shadowColor="#781A1A"
                        android:text="*"
                        android:textColor="@color/marun"
                        android:textColorLink="#E91E63"
                        android:textSize="20sp">

                    </TextView>


                </LinearLayout>


                <EditText
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:id="@+id/course_name"
                    android:text="Enter the Course Name"
                    android:textColor="@color/greye"
                    android:paddingLeft="10dp">

                </EditText>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp">

                </Space>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp">

        </Space>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:paddingLeft="30dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/custom_buttt"
            android:text="Submit"
            android:id="@+id/submit"
            android:textColor="@color/darkredtxt"
            android:textAlignment="textStart"
            android:textSize="20dp">

        </androidx.appcompat.widget.AppCompatButton>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp">

        </Space>

    </LinearLayout>
    </ScrollView>

</RelativeLayout>