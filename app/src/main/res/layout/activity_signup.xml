<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/babypink"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    tools:context=".signup">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whitee"
            android:gravity="center"
            android:layout_gravity="top"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbare"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:background="@color/blackie"
                android:scrollbars="none"
                app:layout_scrollFlags="scroll|enterAlways">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:src="@drawable/logo" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/signinAbout"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="70dp"
                        android:paddingTop="2dp"
                        android:textColor="@color/whitiee"
                        android:textSize="20dp"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:orientation="horizontal"/>

            </androidx.appcompat.widget.Toolbar>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingTop="40dp"
                android:textColor="@color/darkredtxt"
                android:text="REGISTER"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <EditText
                android:id="@+id/first_name"
                android:layout_width="375dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                android:padding="20dp"
                android:background="@drawable/custom_buttt"
                android:textColor="@color/black"
                android:inputType="text"
                android:layout_gravity="center"
                android:gravity="top"
                android:imeOptions="actionNext"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="20dp"
                android:hint="First Name"
                android:textColorHint="@color/blacky"/>

            <EditText
                android:id="@+id/last_name"
                android:layout_width="378dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                android:padding="20dp"
                android:background="@drawable/custom_buttt"
                android:textColor="@color/black"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:layout_marginBottom="15dp"
                android:hint="Last Name"
                android:textColorHint="@color/blacky"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="378dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                android:padding="20dp"
                android:background="@drawable/custom_buttt"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                android:layout_marginBottom="15dp"
                android:hint="Email"
                android:textColorHint="@color/blacky"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="378dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/custom_buttt"
                android:hint="Password"
                android:textColorHint="@color/blacky"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="378dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                android:padding="20dp"
                android:background="@drawable/custom_buttt"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:layout_marginBottom="15dp"
                android:hint="Confirm Password"
                android:textColorHint="@color/blacky"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="160dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:textColor="@color/darkredtxt"
                android:text=" Select the role"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />


            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:outlineAmbientShadowColor="@color/darkredtxt">

            <RadioButton
                android:id="@+id/student"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:buttonTint="@color/darkredtxt"
                android:paddingVertical="10dp"
                android:paddingLeft="10dp"
                android:text="Student"
                android:textColor="@color/darkredtxt"
                android:textSize="20dp"
                android:textStyle="bold" />



                <RadioButton
                    android:id="@+id/admin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:buttonTint="@color/darkred"
                    android:paddingVertical="10dp"
                    android:paddingLeft="10dp"
                    android:text="Admin"
                    android:textColor="@color/darkredtxt"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </RadioGroup>

        </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signup"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                android:padding="10dp"
                android:paddingTop="30dp"
                android:background="@drawable/custom_buttt"
                android:textColor="@color/darkredtxt"
                android:layout_marginBottom="10dp"
                android:textAllCaps="false"
                android:text="Sign up"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"
                android:padding="10dp"
                android:textColor="@color/darkredtxt"
                android:text="Already have an account? Login"
                android:textStyle="bold"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>